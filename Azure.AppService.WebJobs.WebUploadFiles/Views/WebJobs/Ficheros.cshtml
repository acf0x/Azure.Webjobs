@model List<string>

<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <h2>Web Jobs</h2>
        <h3>Listado de Ficheros - Almacenamiento Local (App Service)</h3>
        <hr />

        @if (Model.Count > 0)
        {
            <div class="card-columns">
                @foreach (var urlImage in Model)
                {
                    <div class="card">
                        <img src="@urlImage" class="img-fluid" />
                    </div>
                }
            </div>
        }
        else
        {
            <br />

            <br />
            <div class="row">
                <div class="col text-center text-danger">No hay ficheros procesados</div>
            </div>
        }
    </div>
    <div class="col-1"></div>
</div>